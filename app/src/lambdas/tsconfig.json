{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "outDir": "../../../build/dist",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["*"],
      "@aws/*": ["aws/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["qconcursos/controllers/*"],
      "@interfaces/*": ["qconcursos/interfaces/*"],
      "@services/*": ["qconcursos/services/*"],
      "@models/*": ["qconcursos/models/*"],
      "@dtos/*": ["dtos/*"],
      "@exceptions/*": ["exceptions/*"]
    }
  },
  "exclude": ["app/src/**/*.spec.ts"]
}
